@{
    ViewData["Title"] = "Expenses";
}

@model List<Expense>

<div class="text-center">
    <h1 class="display-4">Expenses</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Description</th>
                <th scope="col">Value</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach(var expense in Model)
                {
                    <tr>
                        <th scope="row">@expense.Id</th>
                        <td>@expense.Description</td>
                        <td>@expense.Value</td>
                        <td><a asp-action="EditExpense" class="btn btn-primary" asp-route-id="@expense.Id">Edit</a></td>
                        <td><a asp-action="DeleteExpense" class="btn btn-red" asp-route-id="@expense.Id">Delete</a></td>
                    </tr>
                    
                }
            }

        </tbody>
    </table>
    
</div>