@{
    ViewData["Title"] = "Expenses";
}

@model List<Expense>

<div class="text-center">
    <h1 class="display-4">Streaming Expenses</h1>
    <br />
    <br />
    <h3>Total Cost $@ViewBag.Expenses</h3>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Description</th>
                <th scope="col">Value</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach(var expense in Model)
                {
                    <tr>
                        <th scope="row">@expense.Id</th>
                        <td>@expense.Description</td>
                        <td>@expense.Value</td>
                        <td><a asp-action="CreateOrEditExpense" class="btn btn-primary" asp-route-id="@expense.Id">Edit</a></td>
                        <td><a asp-action="DeleteExpenseForm" class="btn btn-danger" asp-route-id="@expense.Id">Delete</a></td>
                    </tr>
                    
                }
            }

        </tbody>
        
    </table>
    <div style="text-align:start">
        <a asp-action="Index" class="btn btn-success" style="align-content:flex-start">Home</a>
    </div>
    
    
    
</div>