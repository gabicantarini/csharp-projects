@{
    ViewData["Title"] = "Create Expense";
}

@model SpendSmart.Models.Expense

<div class="text-center">
    <h1 class="display-4">Create Expense</h1>
</div>

<form asp-action="CreateOrEditExpenseForm" asp-controller="Home">
    
    <input hidden class="form-control" type="number" placeholder="0" asp-for="Id"/>
    
    <label class="mt-4">Value $</label>
    <input class="form-control" type="number" placeholder="Add a Value" asp-for="Value" step="0.01"/>
    
    <label class="mt-4">Description</label>
    <input class="form-control" type="string" placeholder="Add a description" asp-for="Description"/>

    <label class="mt-4">Streaming</label>
    <input class="form-control" type="string" placeholder="Add a Streaming" asp-for="Streaming" />

    <button class="btn btn-primary mt-4" type="submit">OK</button>
</form>